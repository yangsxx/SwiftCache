<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.yangsc.swiftcache.base.mapper.ClipboardHistoryMapper">

    <resultMap id="BaseResultMap" type="top.yangsc.swiftcache.base.pojo.ClipboardHistory">
    </resultMap>


    <select id="getClipboard" resultType="top.yangsc.swiftcache.controller.bean.vo.resp.ClipboardRespVO">
        select ch.*,cv.content from clipboard_history ch
                          left join clipboard_values cv on  ch.value_id = cv.id
        limit #{pageSize} offset ((#{pageNum}-1)*#{pageSize});
    </select>


</mapper>